<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" >
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" />

    <style name="AppTheme.PopupOverlay"  />

    <style name="paddedRecycler">
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:background">@drawable/grey_border</item>
        <item name="android:elevation">2dp</item>
    </style>

    <style name="paddedUpperRecycler" parent="paddedRecycler">
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="paddedLowerRecycler" parent="paddedRecycler">
        <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="paddedRecyclerItem">
        <item name="android:paddingStart">4dp</item>
        <item name="android:paddingEnd">4dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="jobFiltersBasicElement">
        <item name="android:layout_margin">2dp</item>
    </style>

    <style name="jobFiltersBasicText" parent="jobFiltersBasicElement">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="jobFiltersSubtitle" parent="jobFiltersBasicText">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="jobFiltersTitle" parent="jobFiltersBasicText">
        <item name="android:textSize">20sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingLeft">50dp</item>
    </style>

    <style name="jobFiltersSpinner" parent="jobFiltersBasicElement">
        <item name="android:layout_marginEnd">50dp</item>
        <item name="android:layout_alignParentEnd">true</item>
    </style>




</resources>
