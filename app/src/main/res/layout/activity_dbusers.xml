<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="not_an_example.com.freelancerworld.DBUsersActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="50dp">

        <TextView
            android:id="@+id/usernameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Imię i nazwisko:"/>

        <TextView
            android:id="@+id/jobLayout1"
            android:layout_below="@id/usernameLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Zawód:"/>

        <TextView
            android:id="@+id/addressLayout1"
            android:layout_below="@+id/jobLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Adres:"/>

        <TextView
            android:id="@+id/username1"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Damian Smug"/>

        <TextView
            android:id="@+id/job1"
            android:layout_below="@id/username1"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Wielbiciel Xamarina"/>

        <TextView
            android:id="@+id/address1"
            android:layout_below="@id/job1"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ptakowa 7"/>

        <View
            android:layout_below="@id/address1"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/usernameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Imię i nazwisko:"/>

        <TextView
            android:id="@+id/jobLayout2"
            android:layout_below="@id/usernameLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Zawód:"/>

        <TextView
            android:id="@+id/addressLayout2"
            android:layout_below="@+id/jobLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Adres:"/>

        <TextView
            android:id="@+id/username2"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adam Rezner"/>

        <TextView
            android:id="@+id/job2"
            android:layout_below="@id/username2"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="śmieszek"/>

        <TextView
            android:id="@+id/address2"
            android:layout_below="@id/job2"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zaliczeniowa 3"/>

        <View
            android:layout_below="@id/address2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/usernameLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Imię i nazwisko:"/>

        <TextView
            android:id="@+id/jobLayout3"
            android:layout_below="@id/usernameLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Zawód:"/>

        <TextView
            android:id="@+id/addressLayout3"
            android:layout_below="@+id/jobLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Adres:"/>

        <TextView
            android:id="@+id/username3"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Patryk Tomczyk"/>

        <TextView
            android:id="@+id/job3"
            android:layout_below="@id/username3"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Właściciel firmy MałoMiękko"/>

        <TextView
            android:id="@+id/address3"
            android:layout_below="@id/job3"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bramowa 95"/>

        <View
            android:layout_below="@id/address3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"/>

    </RelativeLayout>


</LinearLayout>
